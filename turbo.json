{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["GEMINI_API_KEY", "AUTH_SECRET", "NEXTAUTH_SECRET", "NODE_ENV", "DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"],
      "inputs": ["prisma/schema.prisma"],
      "outputs": [],
      "env": ["GEMINI_API_KEY", "AUTH_SECRET", "NEXTAUTH_SECRET", "NODE_ENV", "DATABASE_URL"]
    }
  }
}
